import 'package:flutter/material.dart';
import '../../../../core/helper/responsive_extensions.dart';

class ShippingMethodSwitcher extends StatefulWidget {
  const ShippingMethodSwitcher({super.key});

  @override
  State<ShippingMethodSwitcher> createState() => _ShippingMethodSwitcherState();
}

class _ShippingMethodSwitcherState extends State<ShippingMethodSwitcher> {
  bool isHomeDelivery = true;

  @override
  Widget build(BuildContext context) {
    return Container(
      height: 50.h(context),
      decoration: BoxDecoration(
        color: Colors.grey[100],
        borderRadius: BorderRadius.circular(25.r(context)),
      ),
      child: Row(
        children: [
          _buildOption('Home delivery', isHomeDelivery, () => setState(() => isHomeDelivery = true)),
          _buildOption('Pick up in store', !isHomeDelivery, () => setState(() => isHomeDelivery = false)),
        ],
      ),
    );
  }

  Widget _buildOption(String title, bool isSelected, VoidCallback onTap) {
    return Expanded(
      child: GestureDetector(
        onTap: onTap,
        child: Container(
          margin: EdgeInsets.all(4.r(context)),
          decoration: BoxDecoration(
            color: isSelected ? Colors.white : Colors.transparent,
            borderRadius: BorderRadius.circular(20.r(context)),
            boxShadow: isSelected 
                ? [BoxShadow(color: Colors.black.withOpacity(0.05), blurRadius: 5, offset: const Offset(0, 2))]
                : [],
          ),
          child: Center(
            child: Text(
              title,
              style: TextStyle(
                fontSize: 14.r(context),
                fontWeight: isSelected ? FontWeight.bold : FontWeight.w500,
                color: isSelected ? Colors.black : Colors.grey,
              ),
            ),
          ),
        ),
      ),
    );
  }
}